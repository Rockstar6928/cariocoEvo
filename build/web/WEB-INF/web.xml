<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>controladorValidar</servlet-name>
        <servlet-class>Controlador.controladorValidar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorCliente</servlet-name>
        <servlet-class>Controlador.ControladorCliente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorCategoria</servlet-name>
        <servlet-class>Controlador.ControladorCategoria</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorProducto</servlet-name>
        <servlet-class>Controlador.ControladorProducto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorPerfil</servlet-name>
        <servlet-class>Controlador.ControladorPerfil</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>controladorVistasCliente</servlet-name>
        <servlet-class>Controlador.controladorVistasCliente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorTrabajador</servlet-name>
        <servlet-class>Controlador.ControladorTrabajador</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>controladorValidar</servlet-name>
        <url-pattern>/controladorValidar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorCliente</servlet-name>
        <url-pattern>/ControladorCliente</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorCategoria</servlet-name>
        <url-pattern>/ControladorCategoria</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorProducto</servlet-name>
        <url-pattern>/ControladorProducto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorPerfil</servlet-name>
        <url-pattern>/ControladorPerfil</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>controladorVistasCliente</servlet-name>
        <url-pattern>/controladorVistasCliente</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorTrabajador</servlet-name>
        <url-pattern>/ControladorTrabajador</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
